<div>
  <h1>회원가입</h1>
</div>
<div>
  <%= form_for @user  do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div>
      <%= f.submit "회원가입" %>
    </div>
  <% end %>
</div>
